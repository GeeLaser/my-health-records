    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.6.3/css/all.css" integrity="sha384-UHRtZLI+pbxtHCWp1t77Bi1L4ZtiqrqD80Kn4Z8NTSRyMA2Fd33n5dQ8lWUE00s/" crossorigin="anonymous">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.6.3/css/all.css" integrity="sha384-UHRtZLI+pbxtHCWp1t77Bi1L4ZtiqrqD80Kn4Z8NTSRyMA2Fd33n5dQ8lWUE00s/" crossorigin="anonymous">
    <link rel="stylesheet" href="https://unpkg.com/bootstrap-table@1.18.3/dist/bootstrap-table.min.css">

    <link rel='stylesheet' href='stylesheets/style.css' />


    <title>Upload files</title>
    <nav class="navbar navbar-expand-xl navbar-dark bg-dark">
        <div class="container-fluid">
            <a class="navbar-brand" href="/login">My Health Records</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item">
                        <a class="nav-link active"  aria-current="page" href="/login">Login</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/register">Register</a>
                    </li>
            </div>
        </div>
    </nav>
    
</head>
<center>
<body class="login-register">
    <div class = "undernavbar"> 
        <h1>Welcome to My Health records</h1>
        <h6>Login with your email and password or create an account</h6>
        <% if (messages.error) { %>
        <%= messages.error %>
        <% } %>
        <form action="/login" method="POST">
        <div>
            <input type="email" id="emailInput" name="email" placeholder="Enter your email" required>
        </div>
        <div>
            <input type="password" id="passwordInput" name="password" placeholder="Enter your password"required>
        </div>
        <div class="show-password">
            <input type="checkbox" onclick="showPass()" id="showpass"> Show Password
            <script>
                function showPass() {
                    var ptype = document.getElementById("passwordInput");
                    if (ptype.type === "password") {
                        ptype.type = "text";
                    } else {
                        ptype.type = "password";
                    }
                }
            </script>
        </div>  
        <input type="submit" value="Login"></input>
        </form>
        <form action="/register" style="padding-top: 1%;" method="GET">
            <input type="submit" value="Create an account">
        </form>
    </div>
</body>
</center>
</html>
